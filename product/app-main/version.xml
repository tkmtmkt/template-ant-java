<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="2.0" 
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">

    <info organisation="example.com"
          module="app-main"
          revision="0.1"
          status="integration"/>

    <configurations>
        <conf name="default" extends="runtime,master" />
        <conf name="master" />
        <conf name="compile" />
        <conf name="runtime" extends="compile" />
        <conf name="test" visibility="private" extends="runtime" />
        <conf name="sources" />
        <conf name="javadoc" />
    </configurations>

    <publications>
        <artifact name="app-main" type="jar" ext="jar" conf="master" />
        <artifact name="app-main" type="jar" ext="jar" conf="sources" />
        <artifact name="app-main" type="jar" ext="jar" conf="javadoc" />
    </publications>

    <dependencies>
        <dependency name="app-data" rev="latest.integration" />
        <dependency org="junit" name="junit" rev="4.11" conf="test->runtime(*),master(*)" />
    </dependencies>
</ivy-module>
